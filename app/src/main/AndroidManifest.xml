<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codewarrior928.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivityMain"
            android:label="Tour Guide Application">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OutdoorsActivity"
            android:label="Outdoors"
            android:parentActivityName=".MainActivityMain">
            <!-- Parent activity meta data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivityMain"
            />
        </activity>
        <activity
            android:name=".NeighborhoodsActivity"
            android:label="Attractions"
            android:parentActivityName=".MainActivityMain">
            <!-- Parent activity meta data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivityMain"
            />
        </activity>
        />
        <activity
            android:name=".HistoryActivity"
            android:label="History"
            android:parentActivityName=".MainActivityMain">
            <!-- Parent activity meta data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivityMain"
                />
        </activity>
    </application>

</manifest>